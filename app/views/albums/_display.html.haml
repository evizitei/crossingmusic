#album_display
  #album_header
    %h2= album.name
    =link_to "Buy this album",album.band_camp_url
    -if current_user
      =link_to "Edit",edit_album_path(album)
      =link_to "Manage Songs",album_songs_path(album)
  #album_cover
    %img{:src=>album.cover.url}
  #album_songs
    %h3 Track List
    %ul#song_list
    - album.songs.each_with_index do |song,idx|
      %li.song
        = "#{idx + 1}) #{song.name}"
        =link_to "Listen",song_path(song)